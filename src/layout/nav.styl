fontColor = white 
bgCH = rgba(255, 255, 255, .3)
bgCA = rgba(255, 255, 255, .1)
p = .3em
nav
  width 100%
  height inherit
  line-height $layoutH[0][1] - p*2
  &[horizontal]
    color fontColor
    ul
      padding 0
      margin 0
      display flex
      height inherit
      li
        list-style-type none
        padding p
        cursor pointer
        &:hover
          background bgCH
        &:active
          background bgCA
