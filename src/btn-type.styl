[fy-button]
  padding .2em .5em
  margin 10px
  color #ffffff
  line-height $line-height
  border 2px solid rgba(255, 255, 255, .5)
  cursor pointer
  border-radius 5px
  el-before-enlarge(-5)
  &:not([color])
    background $baseC
  &:hover
    position relative
    &::after
      background rgba(255,255,255,.5)
  &:active
    position relative
    &::after
      background rgba(255,255,255,.3)
